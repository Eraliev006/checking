# Public app name shown in the UI
NEXT_PUBLIC_APP_NAME=Checkin

# When false, the app will call the real API at NEXT_PUBLIC_API_BASE_URL
NEXT_PUBLIC_USE_MOCK_API=true

# Base URL for the real API (used only when NEXT_PUBLIC_USE_MOCK_API=false)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Default manual QR code for testing (not a secret)
NEXT_PUBLIC_OFFICE_QR_CODE=OFFICE-1
